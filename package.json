{
  "name": "excmd",
  "version": "0.0.1",
  "description": "Tridactyl's parser for Vi-style command-line, rc-files, and vimscript",
  "main": "lib/interface.js",
  "scripts": {
    "build:doc": "make build-doc",
    "build:ml": "make build-ml",
    "build:scripts": "cd scripts && bsb -make-world",
    "build:bs": "bsb -make-world",
    "watch:bs": "bsb -make-world -w",
    "build:js": "babel --verbose src --ignore '**/*.bs.js' --copy-files --out-dir lib",
    "build": "npm-run-all build:bs build:js",
    "clean": "make clean",
    "clean:all": "make clean-all",
    "prepare": "npm-run-all clean build:bs build:js",
    "test:js": "jest",
    "test:js:staged": "jest --onlyChanged",
    "test:ml": "dune runtest",
    "promote:ml": "dune promote",
    "test": "npm-run-all build:bs --parallel 'test:*'",
    "changed:ml": "./scripts/invokeJestWithBucklescriptPaths.js",
    "format:js": "prettier --ignore-path .gitignore --write 'src/**/*.js' 'test/**/*.js'",
    "format:ml": "make format-ml",
    "format": "npm-run-all 'format:*'",
    "lint-staged": "lint-staged"
  },
  "lint-staged": {
    "linters": {
      "*.{js,json,css,md}": [
        "prettier --ignore-path .gitignore --write",
        "git add",
        "jest --bail --findRelatedTests"
      ],
      "*.{ml,mli}": [
        "npm run format:ml ; :",
        "git add",
        "npm run changed:ml"
      ]
    },
    "ignore": [
      "docs/**/*",
      "package.json"
    ]
  },
  "husky": {
    "husky": {
      "hooks": {
        "pre-commit": "lint-staged && run-p test:js:staged test:ml"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ELLIOTTCABLE/excmd.js.git"
  },
  "author": "ELLIOTTCABLE <npm@ell.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ELLIOTTCABLE/excmd.js/issues"
  },
  "homepage": "https://github.com/ELLIOTTCABLE/excmd.js#readme",
  "dependencies": {
    "bs-deriving": "^42.1.0",
    "bs-gen": "^0.5.2",
    "bs-platform": "^5.0.6",
    "bs-sedlex": "^20.0.0-pre.2",
    "bs-uchar": "0.0.4",
    "fast-text-encoding": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.5.5",
    "@babel/core": "^7.5.5",
    "@babel/preset-env": "^7.5.5",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "husky": "^1.3.1",
    "jest": "^23.6.0",
    "lint-staged": "^8.2.1",
    "npm-run-all": "^4.1.5",
    "ppx-deriving": "^42.1.0",
    "ppx-sedlex": "^20.0.0-pre.2",
    "prettier": "^1.18.2"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "lib/**/*.{js,jsx}",
      "!lib/bs/**",
      "!**/node_modules/**",
      "!**/_opam/**"
    ],
    "testEnvironment": "node",
    "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)+(spec|test).js?(x)",
      "!lib/bs/**",
      "!**/node_modules/**",
      "!**/_opam/**"
    ]
  }
}
