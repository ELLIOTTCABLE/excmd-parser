{
   "name": "excmd",
   "version": "0.0.1",
   "description": "Tridactyl's parser for Vi-style command-line, rc-files, and vimscript",
   "main": "lib/interface.js",
   "types": "lib/interface.d.ts",
   "files": [
      "bsconfig.json",
      "tsconfig.json",
      "docs",
      "lib",
      "shim",
      "src",
      "test",
      "!lib/bs",
      "!**/dune",
      "!**/.merlin"
   ],
   "scripts": {
      "build:doc": "make build-doc",
      "build:ml": "make build-ml",
      "build:scripts": "cd scripts && bsb -make-world",
      "build:bs": "bsb -make-world",
      "watch:bs": "bsb -make-world -w",
      "build:js": "babel --verbose src --extensions '.ts,.js' --ignore '**/*.bs.js' --ignore '**/*.d.ts' --copy-files --out-dir lib",
      "build:examples": "babel --verbose examples --extensions '.ts' --out-dir examples",
      "build:dts": "tsc -p tsconfig.gen-declarations.json",
      "build": "npm-run-all build:bs build:dts build:js build:examples",
      "clean": "make clean",
      "clean:all": "make clean-all",
      "prepare": "npm-run-all clean build",
      "test:js": "jest",
      "test:js:coverage": "jest --collect-coverage",
      "test:js:staged": "jest --only-changed",
      "test:ml": "dune runtest",
      "promote:ml": "dune promote",
      "test": "npm-run-all build:bs --parallel test:js test:ml",
      "changed:ml": "./scripts/invokeJestWithBucklescriptPaths.js",
      "format:js": "prettier --ignore-path .gitignore --write 'src/**/*.ts' 'src/**/*.js' 'test/**/*.js' 'examples/**/*.ts'",
      "format:ml": "make format-ml",
      "format": "npm-run-all 'format:*'",
      "lint-staged": "lint-staged"
   },
   "lint-staged": {
      "linters": {
         "*.{js,json,css,md}": [
            "prettier --ignore-path .gitignore --write",
            "git add",
            "jest --bail --findRelatedTests"
         ],
         "*.{ml,mli}": [
            "npm run format:ml ; :",
            "git add",
            "npm run changed:ml"
         ]
      },
      "ignore": [
         "docs/**/*",
         "package.json"
      ]
   },
   "husky": {
      "husky": {
         "hooks": {
            "pre-commit": "lint-staged && run-p test:js:staged test:ml"
         }
      }
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/ELLIOTTCABLE/excmd.js.git"
   },
   "author": "ELLIOTTCABLE <npm@ell.io>",
   "license": "ISC",
   "bugs": {
      "url": "https://github.com/ELLIOTTCABLE/excmd.js/issues"
   },
   "homepage": "https://github.com/ELLIOTTCABLE/excmd.js#readme",
   "dependencies": {
      "@babel/runtime": "^7.5.5",
      "@elliottcable/bs-result": "^12.0.0",
      "bs-deriving": "^44.1.0",
      "bs-gen": "^0.5.2",
      "bs-platform": "^5.0.6",
      "bs-sedlex": "^20.0.0",
      "bs-uchar": "^2.0.0",
      "fast-text-encoding": "^1.0.0",
      "ocaml-string-convert": "0.0.3"
   },
   "devDependencies": {
      "@babel/cli": "^7.5.5",
      "@babel/core": "^7.5.5",
      "@babel/plugin-transform-runtime": "^7.5.5",
      "@babel/preset-env": "^7.5.5",
      "@babel/preset-typescript": "^7.3.3",
      "@types/terminal-kit": "^1.28.0",
      "babel-jest": "^24.8.0",
      "husky": "^1.3.1",
      "jest": "^24.8.0",
      "lint-staged": "^9.2.1",
      "npm-run-all": "^4.1.5",
      "ppx-deriving": "^44.1.0",
      "ppx-sedlex": "^20.0.0",
      "prettier": "^1.18.2",
      "terminal-kit": "^1.31.1",
      "typedoc": "^0.15.0",
      "typescript": "^3.5.3"
   },
   "jest": {
      "verbose": true,
      "collectCoverageFrom": [
         "src/**/*.{js,jsx}",
         "!src/parserAutomaton.bs.js",
         "!src/menhirLib.bs.js",
         "!**/node_modules/**",
         "!**/_opam/**"
      ],
      "testEnvironment": "node",
      "testMatch": [
         "**/__tests__/**/*.js?(x)",
         "**/?(*.)+(spec|test).js?(x)",
         "!lib/bs/**",
         "!**/node_modules/**",
         "!**/_opam/**"
      ]
   }
}
