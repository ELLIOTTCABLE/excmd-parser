{
  "name": "excmd-parser",
  "version": "0.0.1",
  "description": "Tridactyl's parser for Vi-style command-line, rc-files, and vimscript",
  "main": "lib/interface.js",
  "scripts": {
    "build:ml": "bsb -make-world",
    "build:js": "babel src --ignore '*.bs.js' --copy-files --out-dir lib",
    "build": "npm run build:ml && npm run build:js",
    "prepare": "make clean && make",
    "clean": "make clean",
    "format": "prettier --ignore-path .gitignore --write '**/*.js'",
    "test": "jest"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ELLIOTTCABLE/excmd-parser.git"
  },
  "author": "ELLIOTTCABLE <npm@ell.io>",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/ELLIOTTCABLE/excmd-parser/issues"
  },
  "homepage": "https://github.com/ELLIOTTCABLE/excmd-parser#readme",
  "dependencies": {
    "bs-platform": "^4.0.6",
    "bs-sedlex": "^1.99.4-pre.8",
    "fast-text-encoding": "^1.0.0"
  },
  "devDependencies": {
    "@babel/cli": "^7.1.2",
    "@babel/core": "^7.1.2",
    "@babel/preset-env": "^7.1.0",
    "babel-core": "^7.0.0-bridge.0",
    "babel-jest": "^23.6.0",
    "jest": "^23.5.0",
    "ppx-sedlex": "^1.99.4-pre.8",
    "prettier": "^1.14.3"
  },
  "jest": {
    "verbose": true,
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.{js,jsx}",
      "lib/**/*.{js,jsx}",
      "!lib/bs/**",
      "!**/node_modules/**",
      "!**/_opam/**"
   ],
   "testEnvironment": "node",
   "testMatch": [
      "**/__tests__/**/*.js?(x)",
      "**/?(*.)+(spec|test).js?(x)",
      "!lib/bs/**",
      "!**/node_modules/**",
      "!**/_opam/**"
   ]
  }
}
