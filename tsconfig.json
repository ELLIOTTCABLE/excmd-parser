{
   "compilerOptions": {
      "target": "ESNext",
      "module": "CommonJS",
      "moduleResolution": "Node",
      "esModuleInterop": true,
      "isolatedModules": true,
      "noImplicitThis": true,
      "noEmit": true
   },
   "include": ["src/**/*.ts"],
   "typedocOptions": {
      "name": "Excmd.js",
      "mode": "file",
      "out": "docs",
      "readme": "docs/index.md",
      "disableOutputCheck": true,
      "listInvalidSymbolLinks": true
   }
}
